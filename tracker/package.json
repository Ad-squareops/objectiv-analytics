{
  "name": "root",
  "description": "Object Tracker monorepo root package",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "core/*",
    "plugins/*",
    "queues/*",
    "trackers/*",
    "transports/*"
  ],
  "engines": {
    "node": ">= 12",
    "npm": ">= 8.5"
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "yarn exec make clean && yarn test --clearCache && yarn cache clean",
    "depcheck": "turbo run depcheck",
    "generate": "turbo run generate && turbo run prettify && turbo run tsc",
    "list": "yarn workspaces list",
    "pre-publish": "turbo run pre-publish",
    "prettify": "turbo run prettify",
    "deploy": "yarn registry:npm && turbo run pre-publish && changeset publish",
    "deploy:verdaccio": "yarn registry:verdaccio && turbo run pre-publish && changeset publish && yarn registry:npm",
    "registry:npm": "shx rm -f .npmrc",
    "registry:verdaccio": "shx cp ./verdaccio/.npmrc .npmrc ",
    "test": "turbo run test",
    "test:ci": "turbo run test:ci",
    "test:coverage": "turbo run test:coverage",
    "tsc": "turbo run tsc"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.0",
    "shx": "^0.3.4",
    "turbo": "^1.3.4"
  },
  "packageManager": "yarn@3.0.2"
}
