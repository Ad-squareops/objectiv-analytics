{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^test"]
    },
    "test:ci": {
      "outputs": [],
      "dependsOn": ["^test:ci"]
    },
    "test:coverage": {
      "outputs": ["coverage/**"],
      "dependsOn": ["^test:coverage"]
    },
    "prettify": {
      "outputs": [],
      "dependsOn": ["^prettify"]
    },
    "depcheck": {
      "outputs": [],
      "dependsOn": ["^depcheck"]
    },
    "tsc": {
      "outputs": [],
      "dependsOn": ["^tsc"]
    },
    "generate": {
      "outputs": ["generated/**"]
    },
    "pre-deploy": {
      "dependsOn": ["depcheck", "tsc", "build", "test"]
    },
    "deploy:verdaccio": {
      "dependsOn": ["pre-deploy", "^deploy:verdaccio"]
    }
  }
}
